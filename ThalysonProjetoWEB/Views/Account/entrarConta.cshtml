@{
    ViewData["Title"] = "Login";
    //Layout = "_LayoutAccount";
}

<div class="container" style="max-width: 400px; margin: 0 auto; padding: 20px; border: 1px solid #ddd; border-radius: 8px; box-shadow: 0 4px 6px rgba(0,0,0,0.1); background-color: #f9f9f9;">
    <div class="text-center">
        <h1 style="font-size: 1.8rem; margin-bottom: 20px; color: #333;">Login</h1>
    </div>

    <form asp-action="entrarConta" asp-controller="Account" method="post">
        <div style="margin-bottom: 15px;">
            <label for="username" style="display: block; font-size: 0.9rem; color: #555;">Nome de Usuário</label>
            <input type="text"
                   id="username"
                   name="username"
                   style="width: 100%; padding: 8px; font-size: 0.9rem; border: 1px solid #ccc; border-radius: 4px;"
                   required />
        </div>
        <div style="margin-bottom: 15px;">
            <label for="password" style="display: block; font-size: 0.9rem; color: #555;">Senha</label>
            <input type="password"
                   id="password"
                   name="password"
                   style="width: 100%; padding: 8px; font-size: 0.9rem; border: 1px solid #ccc; border-radius: 4px;"
                   required />
        </div>
        @if (ViewData["MensagemErro"] != null)
        {
            <p style="color: red; margin-top: 10px; font-size: 0.85rem; margin-bottom: 15px;">@ViewData["MensagemErro"]</p>
        }
        <div class="text-center" style="margin-bottom: 15px;">
            <p style="font-size: 0.8rem; color: #777;">Não possui uma conta? <a href="/Account/criarConta" style="color: #007bff; text-decoration: none;">Cadastre-se aqui</a></p>
        </div>

        <button id="submit-button" type="submit"
                style="width: 100%; background-color: #007bff; color: white; padding: 10px; font-size: 1rem; border: none; border-radius: 4px; cursor: pointer;">
            Entrar
        </button>
    </form>
</div>